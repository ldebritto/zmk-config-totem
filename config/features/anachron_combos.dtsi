compatible = "zmk,combos";

// Shorthand combo synthax copied from https://github.com/kkga/zmk-config/blob/master/config/combos.dtsi
#define ANACHRON_COMBO(NAME,         BINDINGS,                   KEYPOS,         LAYERS,    TERM) \
combo_##NAME { \
    timeout-ms = <TERM>; \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
};

ANACHRON_COMBO(circ,     &kp CARET,   RIT LM1,      DEF,      COMBO_TIMEOUT) // ESC is the only combo that moves to NAV since there's no ESC key there
ANACHRON_COMBO(grave,    &kp GRAVE,   RIT LM2,      DEF,      COMBO_TIMEOUT) // MOU gets this since its TAB key position untoggles the layer
ANACHRON_COMBO(tilde,    &kp TILDE,   RIT LM3,      DEF,      COMBO_TIMEOUT) // MOU gets this since there's no ENTER key assigned in the left hand